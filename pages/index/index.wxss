page {
  background-color: #ffffff;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.nav {
  width: 100vw;
  background-color: #ffffff;
}

.nav_top {
  z-index: 100;
  background-color: #ffffff;
}

.nav_top_position {
  z-index: 100;
  position: sticky;
  position: -webkit-sticky;
  width: 100vw;
  top: 146rpx;
  padding-top: 4rpx;
  background-color: #ffffff;
}

.member_box {
  margin-top: 208rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.member_img {
  width: 92vw;
  height: 220rpx;
  border-radius: 32rpx;
}

.member_top {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 24rpx;
  margin-top: 30rpx;
}

.member_top_text {
  margin-left: 6rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #F5F5F5;
}

.member_mumber_text {
  position: absolute;
  right: 56rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #3CC882;
}

.member_card {
  width: 36rpx;
  height: 30rpx;
}

.member_content_text {
  position: absolute;
  margin-top: 74rpx;
  margin-left: 24rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #818181;
}

.member_bottom {
  position: absolute;
  margin-top: 140rpx;
  margin-left: 24rpx;
}

.price {
  font-size: 40rpx;
  font-weight: 600;
  color: #F5F5F5;
}

.price_text {
  font-size: 22rpx;
  font-weight: 600;
  color: #F5F5F5;
}

.member_buy {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 140rpx;
  right: 56rpx;
  width: 144rpx;
  height: 56rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #FFFFFF;
  border-radius: 28rpx;
  background-color: #3CC882;
}

.day_all_box {
  display: flex;
  margin-top: 52rpx;
  width: 92vw;
  margin-left: 4vw;
  justify-content: space-around;
}

.day_box {
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  height: 120rpx;
  width: 120rpx;
}

.day_box_choose {
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  height: 120rpx;
  width: 120rpx;
  color: #3CC882;
  border-bottom: 4rpx solid #3CC882;
}

.content_box {
  width: 100vw;
  overflow: auto;
  background-color: #F5F5F5;
}

.food_box {
  display: flex;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  height: 248rpx;
  border-radius: 24rpx;
  box-shadow: 0rpx 4rpx 24rpx 0rpx rgba(0, 0, 0, 0.04);
  background-color: #FFFFFF;
}

.food_img {
  margin-top: 24rpx;
  margin-left: 24rpx;
  width: 200rpx;
  height: 200rpx;
}

.content_text {
  margin-top: 24rpx;
  margin-left: 24rpx;
}

.food_title {
  max-width: 430rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.food_label {
  display: flex;
  margin-top: 8rpx;
}

.label_choose {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  width: 116rpx;
  height: 42rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #3CC882;
  border: 1rpx solid #3CC882;
}

.label {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  width: 116rpx;
  height: 42rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  border: 1rpx solid #E5E5E5;
}

.content_bottom {
  position: absolute;
  margin-top: 184rpx;
  margin-left: 248rpx;
  display: flex;
  align-items: center;
}

.content_price {
  font-size: 30rpx;
  font-weight: 600;
  color: #FF6644;
}

.content_convert {
  margin-left: 8rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #8A949F;
}

.content_book {
  margin-left: 124rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 112rpx;
  height: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 25rpx;
  color: #FFFFFF;
  background-color: #3CC882;
}

.end {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  padding-bottom: 200rpx;
  width: 100vw;
  font-size: 24rpx;
  font-weight: 400;
  color: #BBBBBB;
}